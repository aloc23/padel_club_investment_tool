function calculateCharts(type, investment, revenue, costs) {
  const months = ["Jan","Feb",...];
  const monthlyRevenue = revenue / 12;
  const monthlyCosts = costs / 12;
  const profitSeries = months.map(() => monthlyRevenue - monthlyCosts);
  if (pnlChartInstance) pnlChartInstance.destroy();
  pnlChartInstance = new Chart(document.getElementById('pnlChart'), { /* ... */ });
  if (roiChartInstance) roiChartInstance.destroy();
  roiChartInstance = new Chart(document.getElementById('roiChart'), { /* ... */ });
}
